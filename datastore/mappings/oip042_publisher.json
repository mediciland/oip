            "block": {
              "type": "long"
            },
            "block_hash": {
              "type": "keyword",
              "ignore_above": 64
            },
            "deactivated": {
              "type": "boolean"
            },
            "signature": {
              "type": "binary"
            },
            "time": {
              "type": "date",
              "format": "epoch_second"
            },
            "tx": {
              "type": "object",
